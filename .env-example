# DATABASE CONFIGURATION
DATABASE_URI="postgresql+psycopg2://<db_user>:<password>@<host>:<port>/<db_name>"
DB_POOL_SIZE=10                 # Number of connections to maintain in pool
DB_MAX_OVERFLOW=20              # Maximum overflow connections beyond pool_size
DB_POOL_TIMEOUT=30              # Timeout in seconds to get connection from pool
DB_POOL_RECYCLE=3600            # Time in seconds to recycle connections (1 hour)
DB_ECHO=false                   # Set to true for SQL query logging (debug only)

# DOI SERVICE CONFIGURATION
DOI_BASE_URL="https://api.test.datacite.org"
DOI_USERNAME="your-datacite-username"
DOI_PASSWORD="your-datacite-password"
DOI_PREFIX="10.12345"

#  LOGGING CONFIGURATION
LOG_FILE="logs/beamtime_server.log"
